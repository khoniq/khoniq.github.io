#!/bin/sh
cd $(dirname $0)/..
man=$(pwd)/man
pub=$(pwd)/pub
tmp=$(pwd)/.tmp

#journal index
grep "\<h1\>" $man/journal/posts/*.html | sort -r | sed 's/^.*journal\///;s/:<h1>/ /;s/<\/h1>//' |
awk '{print $1,$1,$2}' | sed 's/^[^ 0-9]*\([0-9]*\)[^ ]*/\1/' | awk 'BEGIN{print "<h1>日記</h1><ul>"}END{print "</ul>"}{printf "<li>[%s]<a href=\"%s\">%s</a></li>\n",$1,$2,$3}' > $man/journal/index.html
